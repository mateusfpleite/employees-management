<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> Erros ao tentar criar colaborador:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :função, style: "display: block" %>
    <%= form.text_field :role %>
  </div>

  <div>
    <%= form.label :documento, style: "display: block" %>
    <%= form.text_field :document %>
  </div>

  <div>
    <%= form.submit "Criar funcionário", class: "cursor-pointer mt-2 ml-2 px-4 py-2 bg-blue-500 text-white rounded" %>
  </div>
<% end %>
